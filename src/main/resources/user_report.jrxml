<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="user_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20"
              uuid="e1c5d528-6a4e-4e87-9f1e-2ad19ffb8d8c">
              
	<!-- Parameters -->
    <parameter name="requestedDate" class="java.lang.String"/>
    
    <!-- Fields -->
    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="phoneNo" class="java.lang.String"/>
    <field name="address" class="java.lang.String"/>
    <field name="male" class="java.lang.Boolean"/>
    <field name="dateOfBirth" class="java.util.Date"/>

    <!-- Title -->
    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["User Report"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Page Header -->
    <pageHeader>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="300" height="15"/>
                <textFieldExpression><![CDATA["Request Date: " + $P{requestedDate}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- Column Header -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="80" height="15"/><text><![CDATA[Name]]></text></staticText>
            <staticText><reportElement x="80" y="0" width="120" height="15"/><text><![CDATA[Email]]></text></staticText>
            <staticText><reportElement x="200" y="0" width="100" height="15"/><text><![CDATA[Phone No]]></text></staticText>
            <staticText><reportElement x="300" y="0" width="60" height="15"/><text><![CDATA[Gender]]></text></staticText>
            <staticText><reportElement x="360" y="0" width="90" height="15"/><text><![CDATA[Date of Birth]]></text></staticText>
            <staticText><reportElement x="450" y="0" width="105" height="15"/><text><![CDATA[Address]]></text></staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="80" height="15"/><textFieldExpression><![CDATA[$F{name}]]></textFieldExpression></textField>
            <textField><reportElement x="80" y="0" width="120" height="15"/><textFieldExpression><![CDATA[$F{email}]]></textFieldExpression></textField>
            <textField><reportElement x="200" y="0" width="100" height="15"/><textFieldExpression><![CDATA[$F{phoneNo}]]></textFieldExpression></textField>
            <textField><reportElement x="300" y="0" width="60" height="15"/>
                <textFieldExpression><![CDATA[$F{male} ? "Male" : "Female"]]></textFieldExpression>
            </textField>
            <textField pattern="dd-MM-yyyy">
                <reportElement x="360" y="0" width="90" height="15"/>
                <textFieldExpression><![CDATA[$F{dateOfBirth}]]></textFieldExpression>
            </textField>
            <textField><reportElement x="450" y="0" width="105" height="15"/><textFieldExpression><![CDATA[$F{address}]]></textFieldExpression></textField>
        </band>
    </detail>

    <!-- Page Footer -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="15"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>